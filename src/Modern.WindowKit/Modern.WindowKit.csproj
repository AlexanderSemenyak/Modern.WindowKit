<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <Nullable>enable</Nullable>
    <AppendTargetFrameworkToOutputPath>false</AppendTargetFrameworkToOutputPath>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>Modern.WindowKit</PackageId>
    <Version>0.1.0</Version>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/modern-forms/Modern.WindowKit</PackageProjectUrl>
    <Description>Cross-platform library for creating and interacting with OS windows.</Description>
    <PackageTags>Modern;WindowKit;GUI;UI;Cross;Platform</PackageTags>
    <PackageOutputPath>../../nupkg</PackageOutputPath>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Avalonia.Mac\**" />
    <Compile Remove="Avalonia.X11\**" />
    <EmbeddedResource Remove="Avalonia.Mac\**" />
    <EmbeddedResource Remove="Avalonia.X11\**" />
    <None Remove="Avalonia.Mac\**" />
    <None Remove="Avalonia.X11\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Modern.Forms.Mac.Backend" Version="0.0.5" />
    <PackageReference Include="SkiaSharp" Version="2.80.2" />
    <PackageReference Include="System.Drawing.Common" Version="5.0.2" />
  </ItemGroup>

</Project>
